<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pkapps.bvritblindspeech.Firstpage">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:id="@+id/imageView"
        android:layout_marginTop="77dp"
        android:src="@drawable/iconn"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <requestFocus />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/angry_btn2"
        android:layout_alignRight="@+id/angry_btn2"
        android:layout_alignEnd="@+id/angry_btn2"
        android:layout_marginTop="35dp"
        android:orientation="vertical">
    </LinearLayout>


    <Button
        android:textColor="#FFFFFF"
        android:textSize="19sp"
        android:layout_width="220dp"
        android:layout_height="43dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="ATTACH A FILE"
        android:id="@+id/button2"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />

    <Button
        android:id="@+id/angry_btn2"
        android:text="PLAY"
        android:textColor="#FFFFFF"
        android:textSize="19sp"
        android:layout_width="220dp"
        android:layout_height="43dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="55dp"
        android:layout_marginStart="55dp"
        android:layout_below="@+id/editText1"/>

    <Button
        android:textColor="#FFFFFF"
        android:textSize="19sp"
        android:layout_width="220dp"
        android:layout_height="43dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="STOP"
        android:id="@+id/button"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/angry_btn2"
        android:layout_alignLeft="@+id/angry_btn2"
        android:layout_alignStart="@+id/angry_btn2" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Text"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/angry_btn2"
        android:layout_alignStart="@+id/angry_btn2" />

</RelativeLayout>
